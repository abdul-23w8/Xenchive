<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft gradient background matching XENCHIVE brand -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#E8ECF4"
                android:centerColor="#F6F8FA"
                android:endColor="#FFFFFF"
                android:dither="true" />
        </shape>
    </item>

    <!-- Optional faint overlay for subtle depth (gold/blue tone glow) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600"
                android:centerX="0.8"
                android:centerY="0.2"
                android:startColor="#26CBA135"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- Centered splash logo -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash"
            android:antialias="true" />
    </item>

</layer-list>
